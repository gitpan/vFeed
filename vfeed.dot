CREATE TABLE nvd_db (
cveid text primary key,
date_published date,
date_modified date,
summary text,
cvss_base text,
cvss_impact text,
cvss_exploit text,
cvss_access_vector text,
cvss_access_complexity text,
cvss_authentication text,
cvss_confidentiality_impact text,
cvss_integrity_impact text,
cvss_availability_impact text

);
